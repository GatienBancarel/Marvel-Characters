<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Marvel API" Loaded="Window_Loaded">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Title" Width="43*"/>
            <ColumnDefinition Width="727*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Margin="0,10,0,292">
            <TextBlock Text="Search :"/>
            <TextBox x:Name="textBoxSearch"/>
            <Button x:Name="enter" Content="Enter" Click="btnEnter"/>
            <TextBlock />
            <TextBlock x:Name="textName" Text="Name : " Visibility="Collapsed"/>
            <TextBlock />
            <TextBlock x:Name="textDescription" Text="Description : " Visibility="Collapsed"/>
            <TextBlock />
            <Image x:Name="imageCharacter" Visibility="Collapsed" />
            <TextBlock />
            <TextBlock x:Name="textListComics" Text="List Comics : " Visibility="Collapsed"/>
          
        <ListView x:Name="listDonne" HorizontalAlignment="Left" Margin="0,89,0,0" VerticalAlignment="Top"  Cursor="Hand" Grid.ColumnSpan="2" Visibility="Collapsed">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ID}" Margin="10,0,0,0" HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="NOM">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" Margin="10,0,0,0" HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="ISSUE">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Issue}" Margin="10,0,0,0" HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Description">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" Margin="30,0,0,0"  HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="THUMBNAIL" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Thumbnail}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>   
     </StackPanel>

    </Grid>
</Window>
